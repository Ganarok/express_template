{
    "name": "express_template",
    "version": "1.0.0",
    "description": "Express Template",
    "main": "index.js",
    "scripts": {
        "dev": "ts-node-dev -r tsconfig-paths/register src/index.ts",
        "build": "tsup src/index.ts --format cjs --clean",
        "start": "node dist/index.js",
        "init:db": "docker build -t localhostdb -q ./db && docker run -it --rm --name \"LocalhostDB\" localhostdb",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix"
    },
    "dependencies": {
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "mongoose": "^6.9.1",
        "ts-node-dev": "^2.0.0"
    },
    "devDependencies": {
        "@types/chai": "^4.3.4",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/node": "^18.13.0",
        "@typescript-eslint/eslint-plugin": "^5.52.0",
        "chai": "^4.3.7",
        "eslint": "^8.34.0",
        "eslint-config-standard-with-typescript": "^34.0.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-n": "^15.6.1",
        "eslint-plugin-promise": "^6.1.1",
        "mocha": "^10.2.0",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.1.2",
        "tsup": "^6.6.0",
        "typescript": "^4.9.5"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Ganarok/Express_template.git"
    },
    "keywords": [],
    "author": "Gabriel Riboldi",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Ganarok/Express_template/issues"
    },
    "homepage": "https://github.com/Ganarok/Express_template#readme"
}
